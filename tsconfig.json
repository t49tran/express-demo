{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "src/*": ["src/*"]
    },
    "lib": ["es2015", "es7"]
  },
  "include": ["./src/**/*"],
  "compileOnSave": true
}
